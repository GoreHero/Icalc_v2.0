        xmlns:vm="clr-namespace:Icalc_v2._0.ViewModels"
        mc:Ignorable="d"
        Title="iCalc" Height="330" Width="195" 
        ResizeMode="NoResize" SizeToContent="WidthAndHeight" 
        Background="Black" WindowStyle="ThreeDBorderWindow" Icon="/Data/icalc.png"  >
    <Window.DataContext>
        <vm:MainWindowViewModels/>
    </Window.DataContext>
